                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                   \n      </td>\n    </tr>\n  </tbody>\n</table>\n\n  \n\n\n  \n\n  \n</div>\n      </td>\n    </tr>\n  \n\n  \n\n  \n    </tbody>\n</table>\n\n\n\n\n\n\n\n\n<section ng-should-translate=\"\" class=\"instance-methods\">\n  <a name=\"methods\"></a>\n  <h2 id=\"instance-methods\">方法<a title=\"Link to this heading\" class=\"header-link\" aria-hidden=\"true\" href=\"api/platform-browser/EventManager#instance-methods\"><i class=\"material-icons\">link</i></a></h2>\n  \n    <a id=\"addEventListener\"></a>\n<table class=\"is-full-width method-table instance-methods\">\n  <thead><tr><th>\n    <div class=\"with-github-links\">\n    <h3 id=\"addeventlistener\">\n      addEventListener()\n      \n    <a title=\"Link to this heading\" class=\"header-link\" aria-hidden=\"true\" href=\"api/platform-browser/EventManager#addeventlistener\"><i class=\"material-icons\">link</i></a></h3>\n    <div class=\"github-links\">\n  <a href=\"https://github.com/angular/angular-cn/edit/aio/packages/platform-browser/src/dom/events/event_manager.ts?message=docs(platform-browser)%3A%20請簡述你的修改...#L45-L72\" aria-label=\"提供編輯建議\" title=\"提供編輯建議\"><i class=\"material-icons\" aria-hidden=\"true\" role=\"img\">mode_edit</i></a>\n  <a href=\"https://github.com/angular/angular-cn/tree/12.1.0-next.1/packages/platform-browser/src/dom/events/event_manager.ts#L45-L72\" aria-label=\"檢視原始碼\" title=\"檢視原始碼\"><i class=\"material-icons\" aria-hidden=\"true\" role=\"img\">code</i></a>\n</div>\n    </div>\n  </th></tr></thead>\n  <tbody>\n    <tr>\n      <td class=\"short-description\">\n        <p translation-result=\"on\">註冊特定元素和事件的處理器。</p><p translation-origin=\"off\">Registers a handler for a specific element and event.</p>\n\n\n      </td>\n    </tr>\n  \n    <tr>\n      <td>\n        <div class=\"overload-info\">\n  \n\n  <code-example language=\"ts\" hidecopy=\"true\" class=\"no-box api-heading\"><span class=\"member-name\">addEventListener</span>(element: HTMLElement, eventName: string, handler: Function): Function</code-example>\n\n  \n\n  <h6 class=\"no-anchor\" id=\"引數-1\">引數</h6>\n  <table class=\"is-full-width list-table parameters-table instance-methods-overload-parameters\">\n  <tbody>\n  \n    <tr class=\"instance-methods-overload-parameter\">\n      <td class=\"param-name\">\n        <a id=\"\"></a>\n        <code>element</code>\n      </td>\n      <td class=\"param-type\"><code>HTMLElement</code></td>\n      <td class=\"param-description\">\n      <p translation-result=\"on\">要接收事件通知的 HTML 元素。</p><p translation-origin=\"off\">The HTML element to receive event notifications.</p>\n\n\n      </td>\n    </tr>\n    <tr class=\"instance-methods-overload-parameter\">\n      <td class=\"param-name\">\n        <a id=\"\"></a>\n        <code>eventName</code>\n      </td>\n      <td class=\"param-type\"><code>string</code></td>\n      <td class=\"param-description\">\n      <p translation-result=\"on\">要監聽的事件的名稱。</p><p translation-origin=\"off\">The name of the event to listen for.</p>\n\n\n      </td>\n    </tr>\n    <tr class=\"instance-methods-overload-parameter\">\n      <td class=\"param-name\">\n        <a id=\"\"></a>\n        <code>handler</code>\n      </td>\n      <td class=\"param-type\"><code>Function</code></td>\n      <td class=\"param-description\">\n      <p translation-result=\"on\">通知發生時呼叫的函式。接收事件物件作為引數。</p><p translation-origin=\"off\">A function to call when the notification occurs. Receives the\nevent object as an argument.</p>\n\n\n      </td>\n    </tr>\n  </tbody>\n</table>\n\n  \n  <h6 class=\"no-anchor\" id=\"返回值\">返回值</h6>\n  <p translation-result=\"on\">可用於刪除處理器的回呼(Callback)函式。</p><p translation-origin=\"off\"><code>Function</code>: A callback function that can be used to remove the handler.</p>\n\n\n  \n\n\n  \n\n  \n</div>\n      </td>\n    </tr>\n  \n\n  \n\n  \n    </tbody>\n</table>\n\n  \n    <a id=\"addGlobalEventListener\"></a>\n<table class=\"is-full-width method-table instance-methods\">\n  <thead><tr><th>\n    <div class=\"with-github-links\">\n    <h3 id=\"addglobaleventlistener\">\n      addGlobalEventListener()\n      \n    <a title=\"Link to this heading\" class=\"header-link\" aria-hidden=\"true\" href=\"api/platform-browser/EventManager#addglobaleventlistener\"><i class=\"material-icons\">link</i></a></h3>\n    <div class=\"github-links\">\n  <a href=\"https://github.com/angular/angular-cn/edit/aio/packages/platform-browser/src/dom/events/event_manager.ts?message=docs(platform-browser)%3A%20請簡述你的修改...#L73-L101\" aria-label=\"提供編輯建議\" title=\"提供編輯建議\"><i class=\"material-icons\" aria-hidden=\"true\" role=\"img\">mode_edit</i></a>\n  <a href=\"https://github.com/angular/angular-cn/tree/12.1.0-next.1/packages/platform-browser/src/dom/events/event_manager.ts#L73-L101\" aria-label=\"檢視原始碼\" title=\"檢視原始碼\"><i class=\"material-icons\" aria-hidden=\"true\" role=\"img\">code</i></a>\n</div>\n    </div>\n  </th></tr></thead>\n  <tbody>\n    <tr>\n      <td class=\"short-description\">\n        <p translation-result=\"on\">在目標檢視中註冊全域事件處理器。</p><p translation-origin=\"off\">Registers a global handler for an event in a target view.</p>\n\n\n      </td>\n    </tr>\n  \n    <tr>\n      <td>\n        <div class=\"overload-info\">\n  \n\n  <code-example language=\"ts\" hidecopy=\"true\" class=\"no-box api-heading deprecated-api-item\"><span class=\"member-name\">addGlobalEventListener</span>(target: string, eventName: string, handler: Function): Function</code-example>\n\n  \n  <div class=\"deprecated\">\n    <p><strong>Deprecated</strong> No longer being used in Ivy code. To be removed in version 14.</p>\n\n  </div>\n\n  <h6 class=\"no-anchor\" id=\"引數-2\">引數</h6>\n  <table class=\"is-full-width list-table parameters-table instance-methods-overload-parameters\">\n  <tbody>\n  \n    <tr class=\"instance-methods-overload-parameter\">\n      <td class=\"param-name\">\n        <a id=\"\"></a>\n        <code>target</code>\n      </td>\n      <td class=\"param-type\"><code>string</code></td>\n      <td class=\"param-description\">\n      <p translation-result=\"on\">全域事件通知的目標。 \"window\"、\"document\"、\"body\" 之一。</p><p translation-origin=\"off\">A target for global event notifications. One of \"window\", \"document\", or \"body\".</p>\n\n\n      </td>\n    </tr>\n    <tr class=\"instance-methods-overload-parameter\">\n      <td class=\"param-name\">\n        <a id=\"\"></a>\n        <code>eventName</code>\n      </td>\n      <td class=\"param-type\"><code>string</code></td>\n      <td class=\"param-description\">\n      <p translation-result=\"on\">要監聽的事件的名稱。</p><p translation-origin=\"off\">The name of the event to listen for.</p>\n\n\n      </td>\n    </tr>\n    <tr class=\"instance-methods-overload-parameter\">\n      <td class=\"param-name\">\n        <a id=\"\"></a>\n        <code>handler</code>\n      </td>\n      <td class=\"param-type\"><code>Function</code></td>\n      <td class=\"param-description\">\n      <p translation-result=\"on\">事件發生時要呼叫的函式。接收事件物件作為引數。</p><p translation-origin=\"off\">A function to call when the notification occurs. Receives the\nevent object as an argument.</p>\n\n\n      </td>\n    </tr>\n  </tbody>\n</table>\n\n  \n  <h6 class=\"no-anchor\" id=\"返回值-1\">返回值</h6>\n  <p translation-result=\"on\">可用於刪除處理器的回呼(Callback)函式。</p><p translation-origin=\"off\"><code>Function</code>: A callback function that can be used to remove the handler.</p>\n\n\n  \n\n\n  \n\n  \n</div>\n      </td>\n    </tr>\n  \n\n  \n\n  \n    </tbody>\n</table>\n\n  \n    <a id=\"getZone\"></a>\n<table class=\"is-full-width method-table instance-methods\">\n  <thead><tr><th>\n    <div class=\"with-github-links\">\n    <h3 id=\"getzone\">\n      getZone()\n      \n    <a title=\"Link to this heading\" class=\"header-link\" aria-hidden=\"true\" href=\"api/platform-browser/EventManager#getzone\"><i class=\"material-icons\">link</i></a></h3>\n    <div class=\"github-links\">\n  <a href=\"https://github.com/angular/angular-cn/edit/aio/packages/platform-browser/src/dom/events/event_manager.ts?message=docs(platform-browser)%3A%20請簡述你的修改...#L102-L111\" aria-label=\"提供編輯建議\" title=\"提供編輯建議\"><i class=\"material-icons\" aria-hidden=\"true\" role=\"img\">mode_edit</i></a>\n  <a href=\"https://github.com/angular/angular-cn/tree/12.1.0-next.1/packages/platform-browser/src/dom/events/event_manager.ts#L102-L111\" aria-label=\"檢視原始碼\" title=\"檢視原始碼\"><i class=\"material-icons\" aria-hidden=\"true\" role=\"img\">code</i></a>\n</div>\n    </div>\n  </th></tr></thead>\n  <tbody>\n    <tr>\n      <td class=\"short-description\">\n        <p translation-result=\"on\">檢索在其中註冊了事件偵聽器的編譯 Zone。</p><p translation-origin=\"off\">Retrieves the compilation zone in which event listeners are registered.</p>\n\n\n      </td>\n    </tr>\n  \n    <tr>\n      <td>\n        <div class=\"overload-info\">\n  \n\n  <code-example language=\"ts\" hidecopy=\"true\" class=\"no-box api-heading\"><span class=\"member-name\">getZone</span>(): <a href=\"api/core/NgZone\" class=\"code-anchor\">NgZone</a></code-example>\n\n  \n\n  <h6 class=\"no-anchor\" id=\"引數-3\">引數</h6>\n  <p>沒有引數。</p>\n\n  \n  <h6 class=\"no-anchor\" id=\"返回值-2\">返回值</h6>\n  <p><code><a href=\"api/core/NgZone\" class=\"code-anchor\">NgZone</a></code></p>\n\n  \n\n\n  \n\n  \n</div>\n      </td>\n    </tr>\n  \n\n  \n\n  \n    </tbody>\n</table>\n\n  \n</section>\n\n\n\n  \n\n\n  </div>\n</article>\n\n<!-- links to this doc:\n - api/platform-browser\n-->\n<!-- links from this doc:\n - /api\n - api/core/NgZone\n - api/platform-browser\n - api/platform-browser/EventManager#addEventListener\n - api/platform-browser/EventManager#addGlobalEventListener\n - api/platform-browser/EventManager#addeventlistener\n - api/platform-browser/EventManager#addglobaleventlistener\n - api/platform-browser/EventManager#constructor\n - api/platform-browser/EventManager#constructor()\n - api/platform-browser/EventManager#eventmanager\n - api/platform-browser/EventManager#getZone\n - api/platform-browser/EventManager#getzone\n - api/platform-browser/EventManager#instance-methods\n - https://github.com/angular/angular-cn/edit/aio/packages/platform-browser/src/dom/events/event_manager.ts?message=docs(platform-browser)%3A%20請簡述你的修改...#L102-L111\n - https://github.com/angular/angular-cn/edit/aio/packages/platform-browser/src/dom/events/event_manager.ts?message=docs(platform-browser)%3A%20請簡述你的修改...#L21-L130\n - https://github.com/angular/angular-cn/edit/aio/packages/platform-browser/src/dom/events/event_manager.ts?message=docs(platform-browser)%3A%20請簡述你的修改...#L45-L72\n - https://github.com/angular/angular-cn/edit/aio/packages/platform-browser/src/dom/events/event_manager.ts?message=docs(platform-browser)%3A%20請簡述你的修改...#L73-L101\n - https://github.com/angular/angular-cn/tree/12.1.0-next.1/packages/platform-browser/src/dom/events/event_manager.ts#L102-L111\n - https://github.com/angular/angular-cn/tree/12.1.0-next.1/packages/platform-browser/src/dom/events/event_manager.ts#L21-L130\n - https://github.com/angular/angular