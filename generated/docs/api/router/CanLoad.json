                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                       \n      </td>\n    </tr>\n  </tbody>\n</table>\n\n  \n  <h6 class=\"no-anchor\" id=\"返回值\">返回值</h6>\n  <p><code>Observable&lt;boolean | <a href=\"api/router/UrlTree\" class=\"code-anchor\">UrlTree</a>&gt; | Promise&lt;boolean | <a href=\"api/router/UrlTree\" class=\"code-anchor\">UrlTree</a>&gt; | boolean | <a href=\"api/router/UrlTree\" class=\"code-anchor\">UrlTree</a></code></p>\n\n  \n\n\n  \n\n  \n</div>\n      </td>\n    </tr>\n  \n\n  \n\n  \n    </tbody>\n</table>\n\n  \n</section>\n\n\n  \n\n\n  </div>\n</article>\n\n<!-- links to this doc:\n - api/router\n - api/router/Route\n - guide/cheatsheet\n - guide/router\n - guide/router-tutorial-toh\n-->\n<!-- links from this doc:\n - /api\n - api/core/Injectable\n - api/core/NgModule\n - api/router\n - api/router/CanLoad#canLoad\n - api/router/CanLoad#canload\n - api/router/CanLoad#canload-1\n - api/router/CanLoad#description\n - api/router/CanLoad#instance-methods\n - api/router/Route\n - api/router/UrlSegment\n - api/router/UrlTree\n - https://github.com/angular/angular-cn/edit/aio/packages/router/src/interfaces.ts?message=docs(router)%3A%20